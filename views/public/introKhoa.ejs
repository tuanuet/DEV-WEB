<!-- Trang này sinh ra trang gioi thieu ve
+, Trường , giảng viên > xem thông tin giảng viên
+, Lĩnh vực và chủ đề nghiên cứu > giảng viên có lĩnh vực liên quan > xem thông tin giảng viên
-->
<!DOCTYPE html>
<html lang="en">
	<!-- BEGIN HEAD-->
	<% include ../template/head-link.ejs %>
	<!-- END HEAD-->
	<!--BEGIN BODY -->
	<body class="page-header-menu-fixed">
		<link href="/assets/admin/pages/css/profile.css" rel="stylesheet" type="text/css"/>
		<!-- BEGIN NAV -->
		<% include ../template/nav.ejs %>
		<!-- END NAV -->
		<!-- BEGIN PAGE CONTAINER -->
		<div class="page-container">
			<div class="page-head container">
				<div class="page-title">
					<h1>
					<%= title%>
					</h1>
				</div>
			</div>
			<div class="page-content">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="profile-sidebar" style="width: 250px;">
								<!-- PORTLET MAIN -->
								<div class="portlet light profile-sidebar-portlet">
									<!--  BEGIN TITLE SIDEBAR -->
									<div class="profile-usertitle">
										<div class="profile-usertitle-name">
											<%= khoa.tenKhoa %>
										</div>
									</div>
									<!--  BEGIN TITLE SIDEBAR -->
									<!-- SIDEBAR MENU -->
									<div class="profile-usermenu">
										<ul class="nav">
											<% for(var i = 0; i < khoa.DonVis.length; i++) {%>
											<li>
												<a href="# " id="<%= khoa.DonVis[i].id %>" onclick="displayLectures(this)">
													<%= khoa.DonVis[i].tenDonVi %>
												</a>
											</li>
											<% } %>
										</ul>
									</div>
									<!-- END MENU -->
								</div>
								<!-- END PORTLET MAIN -->
							</div>
							<!-- BEGIN LIST LECTURES -->
							<div class="col-md-9">
								<div class="portlet light">
									<div class="portlet-title">
										<div class="caption">
											<i class="fa fa-graduation-cap" aria-hidden="true"></i>
											<span class="caption-subject bold uppercase">Danh sách giảng viên</span>
										</div>
									</div>
									<div class="portlet-body">
										<div class="row thumbnails">
											<% for(var i = 0; i < khoa.DonVis.length; i++) {
														for(var j = 0; j < khoa.DonVis[i].GiangViens.length; j++) {%>
											<!-- BEGIN LECTURES -->
											<div class="col-md-4">
												<div class="meet-our-team <%= khoa.DonVis[i].id %>">
													<a href="/intro/giangvien/<%= khoa.DonVis[i].GiangViens[j].id%>">
														<h3><%= khoa.DonVis[i].GiangViens[j].tenGiangVien %></h3>
														<img src="<%= khoa.DonVis[i].GiangViens[j].avatar %>" class="img-responsive">
													</a>
												</div>
											</div>
											<!-- END LECTURES -->
											<% } } %>
										</div>
									</div>
								</div>
							</div>
							<!-- END LIST LECTURES -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTAINER -->
		<!-- BEGIN FOOTER -->
		<% include ../template/footer.ejs %>
		<% include ../template/foot-link.ejs %>
		<script src="/javascipt/handle-display-GiangVien.js" type="text/javascript"></script>
		<!-- END FOOTER -->
	</body>
	<!-- END BODY-->
</html>
