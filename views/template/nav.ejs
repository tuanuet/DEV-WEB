<!-- BEGIN HEADER -->
<div class="page-header">
    <!-- BEGIN HEADER TOP -->
    <div class="page-header-top">
        <div class="container">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <a href="/"><img src="/assets/admin/layout3/img/logo-default.png" alt="logo" class="logo-default"></a>
            </div>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="menu-toggler"></a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN USER LOGIN DROPDOWN -->
            <div class="top-menu">
                <ul class="nav navbar-nav pull-right">
                    <!--NEU KHONG CO USER THI NO LA DANG NHAP
                      --CO USER THI LA TEN TAI KHOAN
                    -->
                    <li class="dropdown dropdown-user dropdown-dark">

                        <% if(!user){%>
                            <a href="/users/login" class="dropdown-toggle">
                                <img alt="" class="img-circle" src="/assets/admin/layout3/img/avatar.png">
                                <span class="username">Đăng nhập </span>
                            </a>
                        <%} else {%>
                            <% if(typeuser == 2){%>
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <img alt="" class="img-circle" src="/assets/admin/layout3/img/avatar.png">
                                    <span class="username"><%= user.tenKhoa%></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-default">
                                    <li>
                                        <a href="/users/khoa/admin">
                                            <i class="icon-user"></i> My Profile </a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/users/logout">
                                            <i class="icon-key"></i> Log Out </a>
                                    </li>
                                </ul>
                            <%} else if(typeuser == 1){%>
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <img alt="" class="img-circle" src="/assets/admin/layout3/img/avatar.png">
                                    <span class="username"><%= user.tenGiangVien%></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-default">
                                    <li>
                                        <a href="/users/giangvien/myprofile">
                                            <i class="icon-user"></i> My Profile </a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/users/logout">
                                            <i class="icon-key"></i> Log Out </a>
                                    </li>
                                </ul>
                            <% } else  {%>
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <img alt="" class="img-circle" src="/assets/admin/layout3/img/avatar.png">
                                    <span class="username username-hide-mobile"><%= user.tenSinhVien%></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-default">
                                    <li>
                                        <a href="/users/sinhvien/myprofile">
                                            <i class="icon-user"></i> My Profile </a>
                                    </li>
                                    <li class="divider">
                                    </li>
                                    <li>
                                        <a href="/users/logout">
                                            <i class="icon-key"></i> Log Out </a>
                                    </li>
                                </ul>
                            <% } %>
                        <% } %>
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                </ul>
            </div>
        </div>
    </div>
