                                                                            <button class="btn blue" type="submit">Tải lên</button>
                                                                            <button class="btn red" type="reset">Xóa</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- END PAGE CONTENT INNER -->
                                                    </div>
                                                    <!-- END PERSONAL INFO TAB -->
                                                    
                                                    <div class="tab-pane" id="tab_1_2">
