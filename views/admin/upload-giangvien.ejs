                                        <div class="profile-usertitle-job">
                                            Developer
                                        </div>
                                    </div>
                                    <!-- END SIDEBAR USER TITLE -->
                                    <!-- SIDEBAR MENU -->
                                    <div class="profile-usermenu">
                                        <ul class="nav">
                                            <li>
                                                <a href="#" id="tongQuan" onclick="submitButtonHandler(this)">
                                                    Tổng Quan
                                                </a>
