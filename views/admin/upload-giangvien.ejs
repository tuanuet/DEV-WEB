                                                        <div class="portlet light">
                                                            <div class="portlet-body">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <form action="/users/khoa/insertbulkgv" method="POST" enctype="multipart/form-data">
                                                                            <input class="btn green" type="file" name="file" id="file">
