                                                                <label class="control-label col-md-3">Mã sinh viên <span class="required">
                                                                * </span>
                                                            </label>
                                                            <div class="col-md-4">
                                                                <div class="input-icon right">
                                                                    <i class="fa"></i>
                                                                    <input type="text" class="form-control" name="number" placeholder="14020613"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                                <div class="form-group">
                                                                    <label class="control-label col-md-3">Họ tên <span class="required">
                                                                    * </span>
                                                                </label>
                                                                <div class="col-md-4">
                                                                    <div class="input-icon right">
                                                                        <i class="fa"></i>
                                                                        <input type="text" class="form-control" name="name" placeholder="Phan Hà Trang"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                    <label class="control-label col-md-3">Khóa học <span class="required">
                                                                    * </span>
                                                                </label>
                                                                <div class="col-md-4">
                                                                    <div class="input-icon right">
                                                                        <i class="fa"></i>
                                                                        <input type="text" class="form-control" name="name" placeholder="QH-2014-I/CQ"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                    <label class="control-label col-md-3">Ngành học <span class="required">
                                                                    * </span>
                                                                </label>
                                                                <div class="col-md-4">
                                                                    <div class="input-icon right">
                                                                        <i class="fa"></i>
                                                                        <input type="text" class="form-control" name="name" placeholder="CNTT"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3">Vnu mail <span class="required">
                                                            * </span>
                                                        </label>
                                                        <div class="col-md-4">
                                                            <div class="input-icon right">
                                                                <i class="fa"></i>
                                                                <input type="text" class="form-control" name="email" placeholder="trang@vnu.edu.vn"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-actions">
                                                    <div class="row">
                                                        <div class="col-md-offset-3 col-md-9">
                                                            <button type="submit" class="btn green">Lưu</button>
                                                            <button type="button" class="btn default">Hủy</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            <!-- END FORM-->
                                            </div> <!-- End tab 2 -->
                                            </div> <!-- End tab-content -->
                                            </div> <!--End portlet-body -->
                                            </div> <!-- End portlet light -->
