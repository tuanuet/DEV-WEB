<script>
    jQuery(document).ready(function () {
        // initiate layout and plugins
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        Demo.init(); // init demo features\
        Profile.init(); // init page demo

        $.ajax({
            url : "/users/khoa/getAllGVOfKhoa",
            type: 'POST',
            success: function (data) {
                console.log(data)
                for(var i = 0; i < data.dataGV.DonVis.length; i++) {
                    for (var j = 0; j < data.dataGV.DonVis[i].GiangViens.length; j++) {
                        $(".add-list-gv").append($("<option/>", {
                            val: data.dataGV.DonVis[i].GiangViens[j].id,
                            text: data.dataGV.DonVis[i].GiangViens[j].tenGiangVien
                        }))
                    }
                }
            }
        })

    });

    function submitdata() {
        if($("#tenHD").val() != "" && $("#diadiem").val() != "") {
            var array = [];
            for(var i = 0 ; i < $("#body-chucvu").children().length; i++) {
                array.push([
                    $("#body-chucvu").children().eq(i).find("td").eq(1).attr("class"),
                    $("#body-chucvu").children().eq(i).find("select").val()
                ]);
            }
            var check =   false;
            for(var i = 0; i < array.length; i++) {
                for(var j = 0; j < array.length; j++) {
                    if(array[i][1] == array[j][1] && i != j)
                        check = true;
                }
            }
            if (check) {
                showtoastr("error", "Vui lòng xem lại các trường thông tin1");
            } else {
                //Gui ajax
                var hoidong = {
                    tenhd : $("#tenHD").val(),
                    diadiem : $("#diadiem").val(),
                    list : array
                }
                $.ajax({
                    url : "/users/khoa/submithoidong",
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(hoidong),
                    success: function (data) {
                        showtoastr("success", "Thêm thành công");
                    }
                })
            }
        } else {
            showtoastr("error", "Vui lòng xem lại các trường thông tin");
        }
    }

    function showtoastr(type, msg) {
        toastr[type](msg);

        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    }
</script>
