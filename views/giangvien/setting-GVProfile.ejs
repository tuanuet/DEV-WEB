<!-- BEGIN PAGE CONTAINER -->
<div class="page-container">
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content">
        <div class="container">
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row margin-top-10">
                <div class="col-md-12">
                    <!-- BEGIN PROFILE SIDEBAR -->
                    <div class="profile-sidebar" style="width: 250px;">
                        <!-- PORTLET MAIN -->
                        <div class="portlet light profile-sidebar-portlet">
                            <!-- SIDEBAR USERPIC -->
                            <div class="profile-userpic">
                                <img src="<%= user.avatar %>" class="img-responsive" alt="">
                            </div>
                            <!-- END SIDEBAR USERPIC -->
                            <!-- SIDEBAR USER TITLE -->
                            <div class="profile-usertitle">
                                <div class="profile-usertitle-name">
                                    <%= datagv.tenGiangVien %>
                                </div>
                                <div class="profile-usertitle-job">
                                    Giảng Viên
                                </div>
                            </div>
                            <!-- END SIDEBAR USER TITLE -->
                            <!-- SIDEBAR MENU -->
                            <div class="profile-usermenu">
                                <ul class="nav">
                                    <li>
                                        <a href="/users/giangvien/myprofile">
                                            <i class="icon-home"></i>
                                            Tổng quan </a>
                                    </li>
                                    <li class="active">
                                        <a href="#">
                                            <i class="icon-settings"></i>
                                            Settings </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- END MENU -->
                        </div>
                        <!-- END PORTLET MAIN -->
                    </div>
                    <!-- END BEGIN PROFILE SIDEBAR -->
                    <!-- BEGIN PROFILE CONTENT -->
                    <div class="profile-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="portlet light ">
                                    <div class="portlet-title tabbable-line">
                                        <div class="caption caption-md">
                                            <i class="icon-globe theme-font hide"></i>
                                            <span class="caption-subject font-blue-madison bold uppercase">Thông tin tài khoản</span>
                                        </div>
                                        <ul class="nav nav-tabs">
                                            <li class="active">
                                                <a href="#tab_1_1" data-toggle="tab">Chỉnh sửa thông tin</a>
                                            </li>
                                            <li>
                                                <a href="#tab_1_2" data-toggle="tab">Ảnh đại diện</a>
                                            </li>
                                            <li>
                                                <a href="#tab_1_3" data-toggle="tab">Mật khẩu</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="tab-content">
                                            <!-- PERSONAL INFO TAB -->
                                            <div class="tab-pane active" id="tab_1_1">
                                                <form>
                                                    <div class="form-group">
                                                        <label class="control-label ">Tên giảng viên</label>
                                                        <input type="text" disabled value="<%= datagv.tenGiangVien %>"
                                                               class="form-control"/></div>
                                                    <div class="form-group" style="display: none">
                                                        <input type="text"  value="<%= datagv.id %>"
                                                               name="id" id="idGV"/>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label ">Mã giảng viên</label>
                                                        <input type="text" disabled value="<%= datagv.id %>"
                                                               class="form-control"/></div>
                                                    <div class="form-group">
                                                    </div>
                                                    <div>
                                                        <label class="control-label ">Đơn vị</label>
                                                        <input type="text" disabled value="<%= datagv.DonVi.tenDonVi %>"
                                                               class="form-control"/>
                                                        <label class="control-label">Khoa</label>
                                                        <input type="text" placeholder="Khoa"
                                                               value="<%= datagv.DonVi.Khoa.tenKhoa %>"
                                                               class="form-control" disabled/></div>
                                                    <div class="form-group">
                                                        <label class="control-label">VNU mail</label>
                                                        <input type="text" placeholder="Khoa" name="vnumail"
                                                               value="<%= datagv.vnuMail %>"
                                                               class="form-control" disabled/></div>
                                                    <div class="form-group">
                                                        <label class="control-label">Hướng nghiên cứu</label>
                                                        <textarea
                                                                class="form-control" name="chude" id="huongnghiencuu"><%= datagv.chuDeHuongNghienCuu %></textarea>
                                                    </div>
                                                    <div class="form-group" id="linhvuclienquan">
                                                        <label class="control-label">Lĩnh vực liên quan :</label>
                                                        </br>
                                                        <% for(var i = 0, k = 0; i < datalv.length; i++) { %>
                                                        <div>
                                                            <label style="margin-left: 80px">
                                                                <input data-checkbox="icheckbox_minimal-green"
                                                                       type="checkbox" class="icheck <%= sign[k++]%>" name="linhvuc" value="<%= datalv[i].id %>">
                                                                <a href="#linhvuc-<%= datalv[i].id %>"
                                                                   data-toggle="collapse"><%= datalv[i].tenLinhVuc %></a>
                                                            </label>
                                                            <div class="icheck-list collapse" style="margin-left: 200px" id="linhvuc-<%= datalv[i].id %>">
                                                                <% for(var j = 0; j < datalv[i].LinhVucs.length; j++ ) { %>
                                                                <label>
                                                                    <input data-checkbox="icheckbox_minimal-green"
                                                                           type="checkbox" class="icheck <%= sign[k++]%>" name="linhvuc2" value="<%= datalv[i].LinhVucs[j].id %>">
                                                                    <%= datalv[i].LinhVucs[j].tenLinhVuc %>
                                                                </label>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                    </div>
                                                    <div class="margiv-top-10">
                                                        <button class="btn green" type="button" onclick="updateInfor()"> Lưu </button>
                                                        <a href="javascript:;" class="btn default"> Hủy </a>
                                                    </div>
                                                </form>
                                            </div>
                                            <!-- END PERSONAL INFO TAB -->
                                            <!-- CHANGE AVATAR TAB -->
                                            <div class="tab-pane" id="tab_1_2">
                                                <p> Cập nhật ảnh đại diện của bạn. </p>
                                                <form action="#" role="form">
                                                    <div class="form-group">
                                                        <div class="fileinput fileinput-new"
                                                             data-provides="fileinput">
                                                            <div class="fileinput-new thumbnail"
                                                                 style="width: 200px; height: 150px;">
                                                                <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image"
                                                                     alt=""/></div>
                                                            <div class="fileinput-preview fileinput-exists thumbnail"
                                                                 style="max-width: 200px; max-height: 150px;"></div>
                                                            <div>
                                                                        <span class="btn default btn-file">
                                                                            <span class="fileinput-new"> Chọn ảnh </span>
                                                                            <span class="fileinput-exists"> Change </span>
                                                                            <input type="file" id="file" name="..."> </span>
                                                                <a href="javascript:;"
                                                                   class="btn default fileinput-exists"
                                                                   data-dismiss="fileinput"> Remove </a>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="margin-top-10">
                                                        <a id="submitavatargv" class="btn green"> Lưu </a>
                                                        <a href="javascript:;" class="btn default"> Hủy </a>
                                                    </div>
                                                </form>
                                            </div>
                                            <!-- END CHANGE AVATAR TAB -->
                                            <!-- CHANGE PASSWORD TAB -->
                                            <div class="tab-pane" id="tab_1_3">
                                                <form>
                                                    <div class="form-group" >
                                                        <label class="control-label">Mật khẩu hiện tại</label>
                                                        <input type="password" class="form-control" id="passOld" onkeyup="changeType()"/></div>
                                                        <p id="addNoti"></p>
                                                    <div class="form-group">
                                                        <label class="control-label">Mật khẩu mới</label>
                                                        <input type="password" class="form-control" id="passNew"/></div>
                                                    <div class="form-group">
                                                        <label class="control-label">Nhập lại mật khẩu mới</label>
                                                        <input type="password" class="form-control" id="passNewAgain" onkeyup="changePass()"/></div>
                                                        <p id="addNotiMatch"></p>
                                                    <div class="margin-top-10">
                                                        <button onclick="saveResult()" class="btn green" type="button" id="savepass"> Lưu </button>
                                                        <a href="javascript:;" class="btn default"> Hủy </a>
                                                    </div>
                                                </form>
                                            </div>
                                            <!-- END CHANGE PASSWORD TAB -->

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END PROFILE CONTENT -->
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
        </div>
    </div>
    <!-- END PAGE CONTENT -->
</div>
